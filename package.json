{
  "name": "allflightsclient",
  "version": "1.0.0",
  "description": "Frontend Application for flights management system",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --config webpack.config.dev.js --port 3000",
    "test": "jest --watch",
    "clean:build": "rimraf ./build && mkdir build",
    "test:ci": "jest",
    "prebuild": "run-p clean:build test:ci",
    "build": "webpack --config webpack.config.prod.js",
    "serve:build": "http-server ./build",
    "postbuild": "run-p start:api serve:build"
  },
  "author": "vicads01@gmail.com",
  "jest": {
    "setupFiles": [
      "./tools/testSetup.js"
    ],
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/utils/fileMock.js",
      "\\.(css|less)$": "<rootDir>/src/utils/styleMock.js"
    }
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "immer": "^9.0.14",
    "prop-types": "^15.8.1",
    "react": "^18.1.0",
    "react-bootstrap": "^2.4.0",
    "react-dom": "^18.1.0",
    "react-loader-spinner": "^5.1.5",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.3.0",
    "react-toastify": "^9.0.4",
    "react-tooltip": "^4.2.21",
    "redux": "^4.2.0",
    "redux-thunk": "^2.4.1",
    "reselect": "^4.1.6",
    "rsuite": "^5.15.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@testing-library/react": "^13.3.0",
    "@zarconontol/enzyme-adapter-react-18": "^0.7.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.5",
    "babel-preset-react-app": "^10.0.1",
    "css-loader": "^6.7.1",
    "cssnano": "^5.1.11",
    "enzyme": "^3.11.0",
    "eslint": "^7.32.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.30.0",
    "fetch-mock": "^9.11.0",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.1.1",
    "jest": "^28.1.1",
    "json-server": "^0.17.0",
    "mini-css-extract-plugin": "^2.6.0",
    "node-fetch": "^3.2.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.0",
    "react-test-renderer": "^18.1.0",
    "redux-immutable-state-invariant": "^2.1.0",
    "redux-mock-store": "^1.5.4",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.1",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.2"
  },
  "babel": {
    "presets": [
      "babel-preset-react-app"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-debugger": "off",
      "no-console": "off",
      "no-unused-vars": "warn",
      "react/prop-types": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "root": true
  }
}
